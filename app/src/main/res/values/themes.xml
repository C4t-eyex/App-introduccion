<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AppConceptosBase" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.AppConceptosBase" parent="Base.Theme.AppConceptosBase" />

    <style name="contenedorPrincipal">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="contenedorSecundario">
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="tituloBanner">
        <item name="android:background">@color/btnprimario</item>
        <item name="android:textColor">@color/tituloSecundario</item>
        <item name="android:textSize">33sp</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tituloPrincipal">
        <item name="android:textColor">@color/tituloPrimario</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="alertaNormal">
        <item name="android:textColor">@color/alertaNormal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="alertaBad">
        <item name="android:textColor">@color/alertaBad</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="alertaGood">
        <item name="android:textColor">@color/alertaGood</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="informacionPrincipal">
        <item name="android:textColor">@color/informacion</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="inputPrincipal">
        <item name="android:padding">10dp</item>
        <item name="android:textColorHint">@color/ingresoDatosTexto</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/informacion</item>
    </style>

    <style name="botonPrimario">
        <item name="android:radius">10dp</item>
        <item name="android:backgroundTint">@color/btnprimario</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fondo</item>
    </style>

    <style name="botonSecundario">
        <item name="android:radius">10dp</item>
        <item name="android:backgroundTint">@color/btnsecundario</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fondo</item>
    </style>

    <style name="botonTerciario">
        <item name="android:radius">10dp</item>
        <item name="android:backgroundTint">@color/btnterciario</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fondo</item>
    </style>

    <style name="botonIntent">
        <item name="android:radius">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorLink">@color/fondo</item>
        <item name="android:textColorHint">@color/fondo</item>

    </style>
</resources>